{
    "include": ["."],
    "exclude": ["dist", "build", "node_modules", "tsup.config.js"],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "jsx": "react-jsx",
        "lib": ["dom", "es2022"],
        "module": "ESNext",
        "target": "ES2022",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true
    }
}
